<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/homeCurrentRoutineTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Routine:"
                    android:textSize="25sp"/>
                <include layout="@layout/routine_current_element"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homeLastRoutineTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Routine:"
                    android:textSize="25sp"/>
                <include layout="@layout/routine_last_element"/>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Routines:"
                android:textSize="25sp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/routinesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>