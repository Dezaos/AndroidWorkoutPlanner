<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="15dp"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/exerciseCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="200dp"
        card_view:cardCornerRadius="@dimen/cardViewRadius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/cardViewPadding"
            >
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/RoutineItemName"
                        android:text="@string/defaultMuscle"
                        android:textSize="@dimen/cardViewTitleSize"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <ImageButton
                    android:id="@+id/ExerciseRemoveButtton"
                    android:layout_width="@dimen/cardViewIconSize"
                    android:layout_height="@dimen/cardViewIconSize"
                    android:background="@drawable/clear"
                    card_view:layout_constraintRight_toRightOf="parent"/>


            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/routineMuscle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/defaulttitle"
                    card_view:layout_constraintTop_toTopOf="parent"
                    android:textSize="15sp"
                    />

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    card_view:layout_constraintRight_toRightOf="parent"
                    android:paddingBottom="5dp">
                    <TextView
                        android:id="@+id/firstExerciseElement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="1"
                        android:paddingEnd="@dimen/exerciseElementPaddingRight"
                        android:textSize="@dimen/exerciseElementAmountSize"
                        />
                    <TextView
                        android:id="@+id/FirstExerciseHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:text="set"/>
                    <TextView
                        android:id="@+id/secondExerciseElement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="1"
                        android:textSize="@dimen/exerciseElementAmountSize"
                        android:paddingEnd="@dimen/exerciseElementPaddingRight"/>
                    <TextView
                        android:id="@+id/SecondExerciseHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:text="rep"/>
                    <TextView
                        android:id="@+id/thirdExerciseElement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="1"
                        android:textSize="@dimen/exerciseElementAmountSize"
                        android:paddingEnd="@dimen/exerciseElementPaddingRight"/>
                    <TextView
                        android:id="@+id/ThirdExerciseHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kg"/>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>