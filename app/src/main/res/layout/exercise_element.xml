<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="15dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="200dp"
        card_view:cardCornerRadius="5dp"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/routineMuscle"
                        android:text="@string/defaultMuscle"
                        android:paddingStart="5dp"
                        />
                    <TextView
                        android:id="@+id/RoutineItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/defaulttitle"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:paddingStart="15dp"
                        />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/ExerciseRemoveButtton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/clear"
                    card_view:layout_constraintRight_toRightOf="parent"/>


            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    card_view:layout_constraintRight_toRightOf="parent">
                    <TextView
                        android:id="@+id/firstExerciseElement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="1"/>
                    <TextView
                        android:id="@+id/FirstExerciseHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:text="set"/>
                    <TextView
                        android:id="@+id/secondExerciseElement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="1"/>
                    <TextView
                        android:id="@+id/SecondExerciseHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:text="rep"/>
                    <TextView
                        android:id="@+id/thirdExerciseElement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="1"/>
                    <TextView
                        android:id="@+id/ThirdExerciseHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="45dp"
                        android:text="kg"/>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>